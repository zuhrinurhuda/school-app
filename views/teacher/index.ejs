<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TEACHERS DATA</title>
  </head>
  <body>
    <h1>TEACHERS DATA</h1>
    <table>
      <tr>
        <td><a href="/">Home</a></td>
        <td><a href="/teacher">Teachers</a></td>
        <td><a href="/student">Students</a></td>
        <td><a href="/subject">Subjects</a></td>
      </tr>
    </table>

   <table border="1px" ">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Option</th>
    </tr>
    <% dataTeachers.forEach((row) => { %>
      <tr>
        <td><%= row.id %></td>
        <td><%= row.firstName %></td>
        <td><%= row.lastName %></td>
        <td><%= row.email %></td>
        <td><% if(row.Subject) { %>
          <%= row.Subject.subjectName %>
          <% }else{ %>
          unassigned
          <% } %>    
        </td>
        <td>
          <a href="/teacher/edit/<%= row.id %>">Edit</a>
          <a> | </a>
          <a href="/teacher/delete/<%= row.id %>">Delete</a>
        </td>
      </tr>
    <% })%>
  </table> 

  <h4><a href="/teacher/add">Add Teacher</a></h4>
  </body>
</html>
