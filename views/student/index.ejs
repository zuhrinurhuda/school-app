<!DOCTYPE html>
<html>
  <% include ../partials/head.ejs %>
  <body>
    <% include ../partials/nav.ejs %>
    
    <h1>STUDENTS DATA</h1>

   <table border="1px" ">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Actions</th>
      <th>Options</th>
    </tr>
    <% dataStudents.forEach((row) => { %>
      <tr>
        <td><%= row.id %></td>
        <td><%= row.firstName %></td>
        <td><%= row.lastName %></td>
        <td><%= row.getFullName()%></td>
        <td><%= row.email %></td>
        <td><a href="/student/addsubject/<%= row.id %>">Add Subject</a></td>
        <td>
          <a href="/student/edit/<%= row.id %>">Edit</a>
          <a> | </a>
          <a href="/student/delete/<%= row.id %>">Delete</a>
        </td>
      </tr>
    <% })%>
  </table> 

  <h4><a href="/student/add">Add Student</a></h4>
  </body>
</html>
