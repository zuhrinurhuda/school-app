<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>STUDENTS DATA</title>
  </head>
  <body>
    <h1>STUDENTS DATA</h1>

    <table>
      <tr>
        <td><a href="/">Home</a></td>
        <td><a href="/teacher">Teachers</a></td>
        <td><a href="/student">Students</a></td>
        <td><a href="/subject">Subjects</a></td>
      </tr>
    </table>

   <table border="1px" ">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Actions</th>
      <th>Options</th>
    </tr>
    <% dataStudents.forEach((row) => { %>
      <tr>
        <td><%= row.id %></td>
        <td><%= row.firstName %></td>
        <td><%= row.lastName %></td>
        <td><%= row.getFullName()%></td>
        <td><%= row.email %></td>
        <td><a href="/student/addsubject/<%= row.id %>">Add Subject</a></td>
        <td>
          <a href="/student/edit/<%= row.id %>">Edit</a>
          <a> | </a>
          <a href="/student/delete/<%= row.id %>">Delete</a>
        </td>
      </tr>
    <% })%>
  </table> 

  <h4><a href="/student/add">Add Student</a></h4>
  </body>
</html>
